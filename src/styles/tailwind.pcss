@tailwind base;
@tailwind components;
@tailwind utilities;


* {
    -webkit-tap-highlight-color: transparent;
}

::-webkit-scrollbar {
	display: none;
}

html {
	scroll-behavior: smooth;
}

@media screen and (prefers-reduced-motion: reduce) {
	html {
		scroll-behavior: auto;
	}
}

input:focus {
  outline: none;
}

.left-p50 {
	left: 50%;
}
.left-m50 {
	left: -50%;
}
